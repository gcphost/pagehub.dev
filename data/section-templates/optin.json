{
  "id": "optin",
  "name": "Opt-in & Contact",
  "templates": [
    {
      "id": "optin-1",
      "name": "Newsletter Signup",
      "structure": {
        "type": "Container",
        "props": {
          "root": {
            "background": "bg-[var(--ph-primary)]"
          },
          "custom": {
            "displayName": "Newsletter Signup"
          },
          "mobile": {
            "py": "py-20"
          }
        },
        "children": [
          {
            "type": "Container",
            "props": {
              "root": {
                "textAlign": "text-center"
              },
              "custom": {
                "displayName": "Content"
              },
              "mobile": {
                "maxWidth": "max-w-7xl"
              }
            },
            "children": [
              {
                "type": "Text",
                "props": {
                  "root": {
                    "fontSize": "text-3xl",
                    "color": "text-[var(--ph-primary--text)]",
                    "fontFamily": "var(--ph-heading-font-family)"
                  },
                  "custom": {
                    "displayName": "Title"
                  },
                  "text": "<h2>Stay Updated</h2>",
                  "mobile": {
                    "fontWeight": "font-bold",
                    "mb": "mb-4"
                  }
                }
              },
              {
                "type": "Text",
                "props": {
                  "root": {
                    "fontSize": "text-lg",
                    "color": "text-[var(--ph-primary--text)]"
                  },
                  "custom": {
                    "displayName": "Description"
                  },
                  "text": "<p>Get the latest news and updates delivered to your inbox.</p>",
                  "mobile": {
                    "mb": "mb-8",
                    "opacity": "opacity-90"
                  }
                }
              },
              {
                "type": "Form",
                "props": {
                  "formType": "subscribe",
                  "mobile": {
                    "display": "flex",
                    "gap": "gap-4",
                    "flexDirection": "flex-col"
                  },
                  "desktop": {
                    "flexDirection": "flex-row"
                  },
                  "custom": {
                    "displayName": "Newsletter Form"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "optin-2",
      "name": "Contact Form",
      "structure": {
        "type": "Container",
        "props": {
          "root": {
            "background": "bg-[var(--ph-alternate--background)]"
          },
          "custom": {
            "displayName": "Contact Form Section"
          },
          "mobile": {
            "py": "py-24"
          }
        },
        "children": [
          {
            "type": "Container",
            "props": {
              "root": {
                "maxWidth": "max-w-4xl"
              },
              "custom": {
                "displayName": "Content"
              },
              "mobile": {
                "maxWidth": "max-w-7xl"
              }
            },
            "children": [
              {
                "type": "Container",
                "props": {
                  "root": {
                    "textAlign": "text-center"
                  },
                  "custom": {
                    "displayName": "Header"
                  },
                  "mobile": {
                    "mb": "mb-12"
                  }
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "root": {
                        "fontSize": "text-4xl",
                        "fontFamily": "var(--ph-heading-font-family)"
                      },
                      "custom": {
                        "displayName": "Title"
                      },
                      "text": "<h2>Get In Touch</h2>",
                      "mobile": {
                        "fontWeight": "font-bold",
                        "mb": "mb-4"
                      }
                    }
                  },
                  {
                    "type": "Text",
                    "props": {
                      "root": {
                        "fontSize": "text-lg",
                        "color": "text-[var(--ph-alternate--text)]"
                      },
                      "custom": {
                        "displayName": "Description"
                      },
                      "text": "<p>Have a question or want to work together? We'd love to hear from you.</p>"
                    }
                  }
                ]
              },
              {
                "type": "Container",
                "props": {
                  "root": {
                    "background": "bg-[var(--ph-background)]",
                    "radius": "rounded-lg",
                    "shadow": "shadow-lg"
                  },
                  "custom": {
                    "displayName": "Form Container"
                  },
                  "mobile": {
                    "p": "p-8"
                  }
                },
                "children": [
                  {
                    "type": "Form",
                    "props": {
                      "formType": "contact",
                      "custom": {
                        "displayName": "Contact Form"
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}